<link rel=stylesheet href=stylesheets/grade.css type=text/css>
<section>
  <header>
    <h1>{{title}}</h1>
  </header>
</section>

<section class="calc" id="classification-generator">
  <header>
    <h2>Degree Classification Calculator</h2>
  </header>
  <form id="classification-main">


    <div id='tables'>

    </div>


    <label for="integrated-masters-check">Intgrated Masters?</label>
    <input id='masterstoggle' type="checkbox" name="integrated-masters-check">

  </form>
<button id='calc-classification'>Calculate classification</button>

<section id='classifiation-results'>
  <p>Rule 1: <span id='rule1-results'></span></p>
  <p>Rule 2: <span id='rule2-results'></span></p>
  <p id='rule3'>Rule 3: <span id='rule3-results'></span></p>
</section>

  <section class="calc">
    <header>
      <h2>Calculate Remaining Grade</h2>
    </header>
    <div id="grade-input">
      <form id="welcome-form">
        <label for="num-units">How many submissions do you have?</label>
        <input type='text' id="num-units" placeholder="2">
        <button id="set-submissions">Set</button>
      </form>
    </div>
    <div id='grade-result'>
      <p>To attain the following, you need:</p>
      <p>First: <span id='first'></span></p>
      <p>Upper Second: <span id='twoOne'></span></p>
      <p>Lower Second: <span id='twoTwo'></span></p>
      <p>Third: <span id='third'></span></p>
    </div>
  </section>



</section>
<script type="text/javascript" src="javascripts/grades/calculators/util.js"></script>
<script type="text/javascript" src="javascripts/grades/calculators/calcHonours.js"></script>
<script type="text/javascript" src="javascripts/grades/calculators/calcMasters.js"></script>
<script type="text/javascript" src="javascripts/grades/grade.js"></script>
